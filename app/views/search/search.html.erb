<% if flash[:notice] %>
<div class="notice"><%= flash[:notice] %></div>
<% end %>

<div class="pure-g">
  <div class="pure-u-1-1" style="text-align: center">
    <h1><%= link_to("Recipe Miner", "/") %></h1>
    <%= form_tag("/search", method: "get", class: "pure-form") do %>
      <%= search_field_tag("search", "", class: "pure-form") %>
      <%= submit_tag("Go", class: "pure-button pure-button-primary") %>
    <% end %>

    <br><br>

    <% @recipes.each do |recipe| %>
    <div class="recipe-panel">
      <img src="<%= recipe.image_url %>" alt="<%= recipe.title %> image" height="50">
      <%= recipe.title %><br>
      <%= link_to(recipe.recipe_url, recipe.recipe_url) %>
      <br><br>
    </div>
    <% end  %>
  </div>
</div>